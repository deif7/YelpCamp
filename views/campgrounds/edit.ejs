<% layout('/layouts/boilerPlate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                 enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%=campground.title%>" required>
                        <div class="valid-feedback">Looks good yeah!</div>

                </div>
                <div class="mb-3"> 
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type=" text" id="location" name="campground[location]"
                        value="<%=campground.location%>" required>
                        <div class="valid-feedback">Looks good yeah!</div>
                </div>

                
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0" id="price" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>" required>
                            <div class="valid-feedback">Looks good yeah!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="discription">Discription</label>
                    <textarea class="form-control" type=" text" id="discription"
                        name="campground[discription]" required><%=campground.discription%> </textarea>
                        <div class="valid-feedback">Looks good yeah!</div>
                </div>

                <label class="form-label" for="image">Upload Images</label>
                <div class="mb-3">
                     <input type="file" name="image" id="image" multiple>
                </div>
                
                <div class="mb-3">
                    <% campground.images.forEach(function (img, i){ %> 
                       <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail"> 
                       <div class="form-check-inline">
                           <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                       </div>    
                       
                      
                    <% }) %> 
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%> ">Back</a>
        </div>
    </div>

    